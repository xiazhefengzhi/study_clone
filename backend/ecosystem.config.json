{
  "apps": [{
    "name": "knowfun-backend",
    "script": "uvicorn",
    "args": "app.main:app --host 0.0.0.0 --port 8000",
    "cwd": "./backend",
    "interpreter": "python",
    "watch": true,
    "ignore_watch": [
      "node_modules",
      "logs",
      "__pycache__",
      "*.pyc",
      ".git"
    ],
    "env": {
      "PYTHONUNBUFFERED": "1"
    },
    "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
    "error_file": "./logs/backend-error.log",
    "out_file": "./logs/backend-out.log",
    "merge_logs": true,
    "autorestart": true,
    "max_restarts": 10,
    "min_uptime": "10s"
  }]
}
